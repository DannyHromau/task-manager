<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- TABLES -->

    <changeSet id="create-table-task" author="Daniil Hromau">
        <createTable tableName="task">
            <column name="id" type="uuid">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="header" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar(500)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="status_enum">
                <constraints nullable="false"/>
            </column>
            <column name="priority" type="priority_enum">
                <constraints nullable="false"/>
            </column>
            <column name="author_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="executor_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="created_on" type="timestamp with time zone">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>
    <!-- END TABLES -->

    <!-- INDEXES -->
    <!-- END INDEXES -->

    <!-- FOREIGN KEYS -->
    <!-- END FOREIGN KEYS -->

    <!-- SEQUENCES -->
    <!-- EDN SEQUENCES -->
</databaseChangeLog>